@model Course
<div class="container pt-3 pb-3">
    <div class=row>
        <div class="col-md-4">
            <img src="~/img/@Model.Image" alt="@Model.Description" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                <h5 class="card-title">@Model.Title</h5>
             </a>
             <p class="card-text">@Model.Description</p>
             <div>
                @if(Model.Tags!=null){
                    @foreach(var item in Model.Tags){
                        <span class="badge bg-primary">@item</span>
                    }
                }
             </div>
         </div>
    </div>
</div>